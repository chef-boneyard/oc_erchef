{sys, [
       {lib_dirs, ["../deps"]},
       {rel, "oc_erchef", "0.15.0",
        [
         kernel,
         stdlib,
         sasl,
         crypto,
         mochiweb,
         webmachine,
         ejson,
         oauth,
         ibrowse,
         couchbeam,
         fast_log,
         epgsql,
         emysql,
         sqerl,
         rabbit_common,
         amqp_client,
         gen_bunny,
         chef_index,
         darklaunch,
         depsolver,
         oc_chef_wm
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "oc_erchef"},
       {profile, embedded},
       {excl_sys_filters, ["^bin/.*",
                           "^erts.*/bin/(dialyzer|typer)"]},
       {excl_archive_filters, [".*"]},
       {app, sasl, [{incl_cond, include}]},
       {app, crypto, [{incl_cond, include}]},
       {app, mochiweb, [{incl_cond, include}]},
       {app, webmachine, [{incl_cond, include}]},
       {app, ejson, [{incl_cond, include}]},
       {app, oauth, [{incl_cond, include}]},
       {app, ibrowse, [{incl_cond, include}]},
       {app, couchbeam, [{incl_cond, include}]},
       {app, folsom, [{incl_cond, include}]},
       {app, sqerl, [{incl_cond, include}]},
       {app, epgsql, [{incl_cond, include}]},
       {app, emysql, [{incl_cond, include}]},
       {app, fast_log, [{incl_cond, include}]},
       {app, depsolver, [{incl_cond, include}]},
       {app, darklaunch, [{incl_cond, include}]},
       {app, oc_chef_wm, [{incl_cond, include}]},
       {app, runtime_tools, [{incl_cond, include}]},
       {app, eper, [{incl_cond, include}]}
      ]}.

{target_dir, "oc_erchef"}.
{overlay_vars, "vars.config"}.

{overlay, [
           {mkdir, "log/sasl"},
           {mkdir, "etc/keys"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
           {copy, "files/oc_erchef", "bin/oc_erchef"},
           {template, "files/app.config", "etc/app.config"},
           {copy, "files/vm.args", "etc/vm.args"}
          ]}.
