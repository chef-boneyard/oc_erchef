current_dir = File.dirname(__FILE__)
log_level :info
log_location STDOUT
node_name "<%= @nodename %>"
client_key "#{current_dir}/<%= @nodename%>.pem"
validation_client_name "<%= @orgname %>-validator"
validation_key "/opt/dev/orgs/<%=orgname%>/<%=orgname%>-validator.pem"
chef_server_url "https://<%= @server_fqdn %>/organizations/<%= @orgname %>"
cache_type 'BasicFile'
cache_options( :path => "#{ENV['HOME']}/.chef/checksums" )
# TODO set up starter/simple cookbooks that do in place file mods or similar?
cookbook_path ["#{current_dir}/../cookbooks"]
